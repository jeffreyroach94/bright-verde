#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

RF24 radio(7, 8); // CE, CSN

const byte address[6] = "00001";
const char text[] = "1";
const char text2[] = "0";

void setup() {
  radio.begin();
  radio.openWritingPipe(address);
  radio.setPALevel(RF24_PA_MIN);
  radio.stopListening();
}

void loop() {

  radio.write(&text, sizeof(text));
  delay(500);

  radio.write(&text2, sizeof(text2));
  delay(250);
}